- if user_signed_in?
  - unless post.like_user(current_user.id).blank?
    = link_to post_like_path(post_id: post.id, id: post.likes[0].id), method: :delete, remote: true do
      .vertical_like
        = image_tag "heart1", size: "30x30"
        %span
          = post.likes_count
  - else
    = link_to post_likes_path(post.id), method: :post, remote: true do
      .vertical_like
        = image_tag "heart0", size: "30x30"
        %span
          = post.likes_count
- else
  .vertical_like
    = image_tag "heart0"
    %span
      = post.likes_count