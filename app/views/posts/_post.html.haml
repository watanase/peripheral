.post-list
  = link_to "/posts/#{post.id}", method: :get do
    .post-item
      .post-images
        = image_tag post.images[0].src.to_s, size: "180x150"
      %h2.post-title
        = post.title
      %p.post-content
        = post.content.truncate(45)
      %div.jarnal
        = post.user.name
        %span
          = post.likes_count
        %i.far.fa-heart 
        %span
          =post.created_at.to_s(:datetime)