.new-post
  = form_with(model: @post, local: true) do |f|
    = render "shared/error_messages", model: f.object
    .add-image
      %ul#previews
        - if @post.persisted?
          - @post.images.each_with_index do |image, i|
            %li
              = image_tag image.src.to_s, id: "pre_#{i}", data: { index: i }, width: "100", height: '100'
              .js-remove
                %svg{:fill => "none", :height => "32", :stroke => "#3d3d3d",
                  "stroke-linecap" => "round", "stroke-linejoin" => "round",
                  "stroke-width" => "1.5", :viewbox => "0 0 24 24",
                  :width => "32", :xmlns => "http://www.w3.org/2000/svg"}
                  %circle{:cx => "12", :cy => "12", :r => "10"}
                  %line{:x1 => "15", :x2 => "9", :y1 => "9", :y2 => "15"}
                  %line{:x1 => "9", :x2 => "15", :y1 => "9", :y2 => "15"}
      #image-box
        = f.fields_for :images do |i|
          .js-file_group{id: "image_#{i.index}", "data-index": "#{i.index}"}
            = i.file_field :src, class: 'js-file'
            -# = i.hidden_field :src_cache
            = i.label :src, id: "label_#{i.index}", for: "post_images_attributes_#{i.index}_src" do
              %i.fas.fa-images
            %br/
          - if @post.persisted?
            = i.check_box :_destroy, data:{ index: i.index }, class: 'hidden-destroy'
        - if @post.persisted?
          .js-file_edit{id: "image_#{@count}", "data-index": "#{@count}"}
            = f.file_field :src,{id: "post_images_attributes_#{@count}_src", name: "post[images_attributes][#{@post.images.count}][src]", class: 'js-file'}
            = f.label :src, id: "label_#{@count}", for: "post_images_attributes_#{@count}_src" do
              %i.fas.fa-images
      -# #image-box-1
      -#   .previews-0#image-box__container
      -#     = f.fields_for :images do |i|
      -#       .input-area
      -#         = i.file_field :src, type: 'file', name: "post[images_attributes][][src]", value:"", style: "display:none", id:"img-file"
      -#         %label{for: "img-file"}
      -#           %i.fas.fa-images
    %p  ※画像は6枚まで投稿できます。
    .text-area
      .text-area__title
        %h2
          タイトル（２０文字以内）
          - if @post.title
            %span.count-name=@post.title.length
          - else
            %span.count-name 0
          %span /20
        = f.text_field :title, class: "text-field", placeholder: "タイトルを入力してください", id: "title"
      .text-area__content
        %h2
          説明文
          - if @post.content
            %span.count-profile=@post.content.length
          - else
            %span.count-profile 0
          %span /300
        = f.text_area :content, class: "input-text", placeholder: "本文を入力してください"
      .text-area__btn
        = f.submit class: "btn"
- if @post.persisted?
  = link_to "戻る", post_path(@post), class: "btn"