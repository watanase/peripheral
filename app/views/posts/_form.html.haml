.new-post
  - if @post.errors.any?
    .chat-group-form__errors
      %h2="#{@post.errors.full_messages.count}件のエラーが発生しました。"
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message
  = form_with(model: @post, local: true) do |f|
    .add-image
      #image-box
        .previews-0#image-box__container
          = f.fields_for :images do |i|
            .input-area
              = i.file_field :src, type: 'file', name: "post[images_attributes][][src]", value:"", style: "display:none", id:"img-file"
              %label{for: "img-file"}
                %i.fas.fa-images
    .add-title
      = f.text_field :title, placeholder: "タイトルを入力してください"
    .add-content
      = f.text_field :content, placeholder: "本文を入力してください"
    .add-btn
      = f.submit "投稿する"