.new-post
  - if @post.errors.any?
    .chat-group-form__errors
      %h2="#{@post.errors.full_messages.count}件のエラーが発生しました。"
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message
  = form_with(model: @post, local: true) do |f|
    .add-image
      #image-box
        .previews-0#image-box__container
          = f.fields_for :images do |i|
            .input-area
              = i.file_field :src, type: 'file', name: "post[images_attributes][][src]", value:"", style: "display:none", id:"img-file"
              %label{for: "img-file"}
                %i.fas.fa-images
    .text-area
      .text-area__title
        %h2 タイトル（２０文字以内）:
        = f.text_field :title, class: "input-title", placeholder: "タイトルを入力してください"
      .text-area__content
        %h2 説明文 :
        = f.text_area :content, class: "input-text", placeholder: "本文を入力してください"
      .text-area__btn
        = f.submit "投稿する", class: "btn"