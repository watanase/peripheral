.login
  .left-page
    .format
      %h2 ログイン
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field-email
          .title
            = f.label :email
          = f.email_field :email, class: "email", autofocus: true, autocomplete: "Eメール"
        .field-password
          .title
            = f.label :password
          = f.password_field :password, class: "pass", autocomplete: "current-password"
        - if devise_mapping.rememberable?
          .field
            = f.check_box :remember_me
            = f.label :remember_me
        .signin-btn
          .sign-in
            = f.submit "ログイン", class: "simple_square_btn8"
          .render
            = render "devise/shared/links"
  .right-page

