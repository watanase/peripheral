!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Peripheral
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .header
      .header__title
        =link_to root_path do
          Title
      .search-bar
        = form_with url: search_posts_path, local: true, method: :get, class: "search-area" do |f|
          = f.text_field :keyword, class: 'search-form', placeholder: "検索ワードを入力してください"
          = button_tag type: 'submit', class: "search-btn" do
            = icon('fas', 'search')
      .nav
        %ul.nav-bar
          %li はじめての方へ
          - if user_signed_in?
            %li.nav-mypage
              = link_to user_path(current_user) do
                = current_user.name
            %li.nav-logout
              = link_to destroy_user_session_path, method: :delete do
                Logout
          - else
            %li.nav-login
              = link_to new_user_session_path do
                Login
            %li.nav-sign
              = link_to new_user_registration_path do
                Signin
    = yield
    .footer
      .footer__title
      .footer___copy
        Copyright
    