.header
  .header__title
    =link_to "PostCard", root_path

  .menu
    .toggle
      %span
      %span
      %span
    %ul.nav
      %li
        = link_to "#", id: "modal-open", class: "link-btn" do
          %i.fas.fa-leaf
          %span はじめての方
        = render "posts/modal"
      %li.home
        = link_to root_path, class: "link-btn" do
          %i.fas.fa-home
          %span ホーム
      - if user_signed_in?
        %li
          = link_to new_post_path, class: "link-btn" do
            %i.far.fa-paper-plane
            %span 投稿
        %li.nav-mypage
          = link_to user_path(current_user), class: "link-btn" do
            %i.fas.fa-user
            %span マイページ
          %ul.drop-menu
            %li
              = link_to "投稿一覧", posts_user_path(current_user), class: "link-btn post"
            %li
              = link_to "フォローリスト", follows_user_path(current_user), class: "link-btn"
            %li
              = link_to "クリップリスト", favorite_user_path(current_user), class: "link-btn"
        %li.nav-logout
          = link_to destroy_user_session_path, method: :delete, class: "link-btn" do
            %i.fa.fa-user-minus
            %span ログアウト
      - else
        %li.nav-login
          = link_to "ログイン", new_user_session_path, class: "link-btn"
        %li.nav-sign
          = link_to "会員登録", new_user_registration_path, class: "link-btn"