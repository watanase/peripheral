.header
  .header__title
    =link_to "PostCard", root_path
  .header__guest
    - unless user_signed_in?
      = form_for(User.new, as: :user, url: session_path(:user)) do |f|
        .field
          =f.hidden_field :email ,value: "test@example.com"
          =f.hidden_field :password ,value: "testtest"
          =f.submit "ゲストユーザーでログインする", class: "guest-btn"
  .menu
    .toggle
      %span
      %span
      %span
    %ul.nav
      %li
        = link_to "#", id: "modal-open", class: "link-btn" do
          %i.fas.fa-leaf
          %span はじめての方
          = render "posts/modal"
      %li
        = link_to root_path, class: "link-btn" do
          %i.fas.fa-home
      - if user_signed_in?
        %li
          = link_to new_post_path, class: "link-btn" do
            %i.far.fa-paper-plane
        %li.nav-mypage
          = link_to user_path(current_user), class: "link-btn" do
            = current_user.name
          %ul.drop-menu
            %li
              = link_to "投稿一覧", posts_user_path(current_user), class: "link-btn"
            %li
              = link_to "フォローリスト", follows_user_path(current_user), class: "link-btn"
            %li
              = link_to "クリップリスト", favorite_user_path(current_user), class: "link-btn"
        %li.nav-logout
          = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "link-btn"
      - else
        %li.nav-login
          = link_to "ログイン", new_user_session_path, class: "link-btn"
        %li.nav-sign
          = link_to "新規登録", new_user_registration_path, class: "link-btn"